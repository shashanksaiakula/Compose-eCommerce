<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/ylate</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.EcommersAndroid</item>
    </style>
    <style name="Theme.EcommersAndroid" parent="android:Theme.Material.Light.NoActionBar" />
</resources>